<!doctype html>
<html lang="es">
<head>
    <title>{$page->title|sanitize}{if ($page->secondary_title != null)} | {$page->secondary_title|sanitize}{/if} | {$page->systemName}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {foreach item=sResourceURL from=$page->getCSSResources()}
       <link rel="stylesheet" type="text/css" href="{$rootUrl}/{$sResourceURL}" />
    {/foreach}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="{$rootUrl}/resources/css/kt-print.css" media="print" />
    <link rel="icon" href="{$rootUrl}/resources/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="{$rootUrl}/resources/favicon.ico" type="image/x-icon">
    <link rel="search" type="application/opensearchdescription+xml" title="KnowledgeTree Quick Search" href="{$rootUrl}/plugins/search2/openSearchDescription.php">
	<link rel="stylesheet" href="{$rootUrl}/assets/css/dm.css">

    <!-- Standalone CSS. -->
{foreach item=sCSS from=$page->getCSSStandalone()}
	<style>
		{$sCSS}
	</style>
{/foreach}

<!-- Javascript Files. -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
	<script src="https://use.fontawesome.com/55d9f84683.js"></script>
{foreach item=sResourceURL from=$page->getJSResources()}
	<script type="text/javascript" src="{$rootUrl}/{$sResourceURL}"> </script>
{/foreach}

<!-- Standalone Javascript. -->
{foreach item=sJavascript from=$page->getJSStandalone()}
	<script type="text/javascript">
		var rootURL = "{$absoluteRootUrl}";
		var quickQuery = "{$search2_quickQuery}";
		{$sJavascript}
	</script>
{/foreach}
</head>
<body {if (!$page->show_portlets)}class="noportlets"{/if} {if $page->onload}onload="{$page->getBodyOnload()}"{/if} >
	<!-- navbar begin-->
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{$page->systemURL}">
				<img src="{$rootUrl}/resources/graphics/ktlogo-topbar-right-transparent.png" title="{$page->systemName}"/>
			</a>

			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
				<div class="navbar-nav mr-auto">
			{foreach item=aMenuItem from=$page->menu}
				{if ($aMenuItem.active == 1)}
					<a class="nav-item nav-link active" href="{$aMenuItem.url}">{$aMenuItem.label}</a>
				{else}
					<a class="nav-item nav-link" href="{$aMenuItem.url}">{$aMenuItem.label}</a>
				{/if}
			{/foreach}
				</div>

				<form class="form-inline my-2 my-lg-0">
				<input class="form-control mr-sm-2" type="text" placeholder="Buscar">
				</form>

				<div class="navbar-nav">
				{if ($page->user)}
					<span class="nav-item navbar-text">{$page->user->getName()|mb_truncate:40:"..."}</span>
				{/if}
			{foreach item=aMenuItem from=$page->userMenu name=prefmenu}
				{if ($aMenuItem.active == 1)}
					<a class="nav-item nav-link active" href="{$aMenuItem.url}">{$aMenuItem.label}</a>
				{else}
					<a class="nav-item nav-link" href="{$aMenuItem.url}">{$aMenuItem.label}</a>
				{/if}
			{/foreach}
				{if ($page->getHelpURL() != null)}
					<a class="nav-link" href="{$page->getHelpURL()}"><i class="fa fa-question-circle"></i></a>
				{/if}
				</div>
			</div>
		</nav>
	</header>
	<!-- navbar end -->
<div class="container-fluid">
	<input type="hidden" name="kt-core-baseurl" id="kt-core-baseurl" value="{$rootUrl}" />
	{if (!$page->hide_section)}

	<div class="row mt-1">
		<div class="col">			
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><span>{i18n}You are here{/i18n}: </span></li>
			{if ($page->breadcrumbSection !== false)}
			{if ($page->breadcrumbSection.url) }
				<li class="breadcrumb-item"><a href="{$page->breadcrumbSection.url}">{$page->breadcrumbSection.label|sanitize}</a></li>
			{else}
				<li class="breadcrumb-item">{$page->breadcrumbSection.label|sanitize}</li>
			{/if}
			{/if}
			{if ($page->breadcrumbs !== false)}
			{foreach item=aCrumb from=$page->breadcrumbs name=bc}
				{if ($aCrumb.url) }
					<li class="breadcrumb-item"><a href="{$aCrumb.url}">{$aCrumb.label|mb_truncate:40:"...":true|sanitize}</a></li>
				{else}
					<li class="breadcrumb-item">{$aCrumb.label|mb_truncate:40:"...":true|sanitize}</li>
				{/if}
			{/foreach}
			{/if}
			{if ($page->breadcrumbDetails !== false)}
				<li class="breadcrumb-item active">({$page->breadcrumbDetails|sanitize})</li>
			{/if}
			</ol>
		</div>
	</div>
	{/if}

	<div class="row">
		{if $page->portlets != NULL}
		<div class="col col-md-4 col-lg-3">
			{foreach item=oPortlet from=$page->portlets}
				{assign var=portlet_output value=$oPortlet->render() }
				{if $portlet_output}
					<!--div class="portlet {if $oPortlet->getActive()}expanded{/if}"-->
					<div class="card mt-1">
						<div class="card-header">
							{$oPortlet->getTitle()}
						</div>
						<div class="card-body">
							{$portlet_output}
						</div>
					</div>
				{/if}
			{/foreach}
		</div>
		{/if}
		<div class="col{if $page->portlets != NULL} col-md-8 col-lg-9{/if}">
			<div class="card">
				{if (!$page->hide_section)}
				<div class="card-header">				
					<h2>
						<i class="fa fa-minus"></i> 
						<span>{$page->componentLabel}</span>
						{if ($page->getHelpURL() != null)}<a href="{$page->getHelpURL()}"><i class="fa fa-question-circle"></i><span class="sr-only">Help</span></a> {/if}
					</h2>
				</div>
				{/if}
				<div class="card-body">
					{if (!empty($page->errStack))}
					<div class="alert alert-danger">
						<ul>
						{foreach item=sError from=$page->errStack}
							<li>
							{if ($page->booleanLink == '0')}
								{$sError|sanitize}
							{else}
								{$sError}
							{/if}
							</li>
						{/foreach}
						</ul>
					</div>
					{/if}

					{if (!empty($page->infoStack))}
					<div class="alert alert-warning">
						<ul>
						{foreach item=sInfo from=$page->infoStack}
							<li>{$sInfo|sanitize}</li>
						{/foreach}
						</ul>
					</div>
					{/if}
					{$page->contents}
				</div>
			</div>
		</div>
	</div>
    <!-- Start footer -->
    <div class="row bg-dark text-white mt-2 pb-2">
		<div class="col mt-2">
			<a href="{$rootUrl}"><img src="{$rootUrl}/resources/powered-by-kt.png" border="0" alt="Powered by KnowledgeTree" title="Powered by KnowledgeTree"/></a>
		</div>
		<div class="col">
			{i18n}&copy; 2008, 2009 <a href="http://www.knowledgetree.com/about/legal" target="_blank">KnowledgeTree Inc.</a>{/i18n}
			{i18n}All rights reserved.{/i18n}
			<br>{i18n arg_timing=$page->getReqTime()}Request created in #timing#s{/i18n}
		</div>
		<div class="col w-100"></div>
		{assign var=disclaimer value=$page->getDisclaimer()}
		{if $disclaimer}
		<div class="col mt-2">
			{$disclaimer}
		</div>
		{/if}
		
    </div>
    <!-- End Footer -->
</div>
</body>
</html>
